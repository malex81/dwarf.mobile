<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Dwarf.Minstrel.Resources.Styles.LocalStyles">
	<Style TargetType="Button" x:Key="iconButton">
		<Setter Property="WidthRequest" Value="60"/>
		<Setter Property="HeightRequest" Value="60"/>
		<Setter Property="FontSize" Value="32"/>
		<Setter Property="Padding" Value="2"/>
		<Setter Property="BorderWidth" Value="2"/>
		<Setter Property="BorderColor" Value="{StaticResource Translucent2}"/>
	</Style>

	<Style TargetType="Image" x:Key="iconImage">
		<Setter Property="WidthRequest" Value="32"/>
		<Setter Property="HeightRequest" Value="32"/>
	</Style>

	<Style TargetType="Border" x:Key="borderCard">
		<Setter Property="Padding" Value="10"/>
		<Setter Property="StrokeShape">
			<Setter.Value>
				<RoundRectangle CornerRadius="10"/>
			</Setter.Value>
		</Setter>
		<Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Light2}, Dark={StaticResource Dark2}}" />
	</Style>
</ResourceDictionary>