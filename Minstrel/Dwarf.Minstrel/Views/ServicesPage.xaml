<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Dwarf.Minstrel.ViewModels"
			 xmlns:vh="using:Dwarf.Minstrel.ViewHelpers"
             x:Class="Dwarf.Minstrel.Views.ServicesPage"
			 x:DataType="vm:ServicesPageModel"
             Title="ServicesPage"
			 Shell.NavBarIsVisible="True">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Add item"
                 IconImageSource="dotnet_bot.png" />
	</ContentPage.ToolbarItems>
	<VerticalStackLayout>
        <Label 
            Text="Служебная страничка"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
		<Button vh:FAIcons.SolidGlyph="Question"
				Command="{Binding ShowAppInfoCommand}"
				IsEnabled="{Binding EnableInfo}"/>
		<Button Command="{Binding TestCommand}" Text="Test"/>
	</VerticalStackLayout>
</ContentPage>