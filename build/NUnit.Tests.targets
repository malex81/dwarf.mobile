<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<Configurations>$(Configurations);Tests</Configurations>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Tests'">
		<TargetFramework>net10.0</TargetFramework>
		<!--<NuGetAuditMode>direct</NuGetAuditMode>-->
		<UseRidGraph>true</UseRidGraph>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IsPackable>false</IsPackable>
		<SignAssembly>false</SignAssembly>
		<Optimize>false</Optimize>
		<DefineConstants>$(DefineConstants);DEBUG;TRACE;TESTS</DefineConstants>
		<WarningLevel>0</WarningLevel>
	</PropertyGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Tests'">
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.*"/>
		<PackageReference Include="nunit" Version="4.5.*" />
		<PackageReference Include="NUnit3TestAdapter" Version="6.1.*" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.*" />
	</ItemGroup>
	<ItemGroup Condition="'$(Configuration)' != 'Tests'">
		<Compile Remove="**\Tests\**" />
	</ItemGroup>

</Project>